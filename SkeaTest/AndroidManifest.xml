<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.linkcube.skeatest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- ###################声明SDK使用的相关权限###################### -->
    <!-- 检测网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取mac地址作为用户的备用唯一标识 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取用户手机的IMEI，用来唯一的标识用户 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 缓存资源优先存入SDcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许应用程序联网，以便向我们的服务器端发送数据 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 人人网分享相关权限 -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 屏幕常亮权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="20" />

    <application
        android:name="me.linkcube.taku.TakuApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <meta-data
            android:name="DATABASE"
            android:value="taku.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="me.linkcube.taku.core.entity" />

        <activity
            android:name="me.linkcube.taku.ui.bt.BTHelpActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.bt.BTSettingActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.sportsgame.ConnectDeviceActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.main.SkeaTestActivity"
            android:screenOrientation="portrait" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.skeasensor.SkeaSensorActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.ota.SkeaOtaActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.ota.ShakeHandActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.ota.ReadBLVertionNumberActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="me.linkcube.taku.ui.ota.ReadMemoryActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>